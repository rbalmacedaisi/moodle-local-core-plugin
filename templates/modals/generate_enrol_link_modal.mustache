<div class="modal fade" id="generateEnrolLinkModal" tabindex="-1" role="dialog" aria-labelledby="generateEnrolLinkModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title position-absolute">{{#str}}enrolLinkGeneration, local_grupomakro_core {{/str}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body px-4">
                {{! Form to relate users }}
                <form>
                    
                    {{! Contract List }}
                    <div class="form-group">
                        <label for="enrolLinkContractList" class="col-form-label">{{#str}} contracts, local_grupomakro_core {{/str}}:</label>
                        <select name="contraclist" id="enrolLinkContractList" class="form-control" required>
                            <option value=''>{{#str}} selectcontract, local_grupomakro_core {{/str}}</option>
                            {{#contracts}}
                            <option value="{{id}}">{{contractId}}</option>
                            {{/contracts}}
                        </select>
                    </div>
                    {{! End Contract List }}
                    
                    {{! Courses list }}
                    <div class="form-group">
                        <label for="enrolLinkCourseList" class="col-form-label">{{#str}} courses, local_grupomakro_core {{/str}}:</label>
                        <select name="courselist" id="enrolLinkCourseList" class="form-control" required>
                            <option value='' >{{#str}} select_course, local_grupomakro_core {{/str}}</option>
                            {{#courses}}
                            <option value="{{id}}">{{fullname}}</option>
                            {{/courses}}
                        </select>
                    </div>
                    {{! End Courses list }}
                </form>
                {{! End Form to relate users }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">{{#str}} cancel, local_grupomakro_core {{/str}}</button>
                <button type="button" class="btn btn-primary" id="generate-enrol-button">{{#str}} generate, local_grupomakro_core {{/str}}</button>
            </div>
        </div>
    </div>
</div>