{{!
    @template local_grupomakro_core/create_contract

    Template purpose and description.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * attributes Array of name / value pairs.

    Example context (json):
    {
        "attributes": [
            { "name": "src", "value": "https://example.com/imgs/logo.png" },
            { "name": "class", "value": "iconsmall" }
        ]
    }
}}

<div class="container-fluid">   
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 px-md-0">
            <div class="card px-4 pt-3">
                <form>
                    <div class="row pb-5 mt-2">
                        {{! Contract number field }}
                        <div class="col-sm-12 col-md-6 form-group">     
                            <label class="w-100" for="contractnumber">{{#str}} contractnumber, local_grupomakro_core {{/str}}</label>
                            <input type="text" class="form-control" id="contractnumber">
                        </div>    
                        {{! End Contract number field }}    
                            
                        {{! contract start date field }}
                        <div class="col-sm-12 col-md-6 form-group">
                            <label class="w-100" for="startdate">{{#str}}startdate, local_grupomakro_core {{/str}}</label>
                            <input type="date" class="form-control" id="startdate">
                        </div>
                        {{! End contract start date field }}
                        
                        {{! contract end date field }}
                        <div class="col-sm-12 col-md-6 form-group">
                            <label class="w-100" for="enddate">{{#str}} enddate, local_grupomakro_core {{/str}}</label>
                            <input type="date" class="form-control" id="enddate">
                        </div>
                        {{! End contract end date field }}
                        
                        {{! contract budget field }}
                        <div class="col-sm-12 col-md-6 form-group">
                            <label class="w-100" for="budget">{{#str}} budget, local_grupomakro_core {{/str}}</label>
                            <input type="text" class="form-control" id="budget" placeholder="$">
                        </div>
                        {{! End contract budget field }}
                        
                        {{! Contract billing condition field }}
                        <div class="col-sm-12 col-md-6 form-group">
                            <label class="w-100" for="billing_condition">{{#str}} billing_condition, local_grupomakro_core {{/str}}</label>
                            <input type="text" class="form-control" id="billing_condition" placeholder="%">
                        </div>
                        {{! End Contract billing condition field }}
                    </div>    
                </form>
                
                {{! Actions }}
                <div class="d-flex card-footer bg-transparent px-0">
                    <div class="spacer"></div>
                    <a href="{{cancelurl}}" class="btn btn-secondary m-1">{{#str}} cancel, local_grupomakro_core {{/str}}</a>
                    <a href="{{cancelurl}}" class="btn btn-primary m-1">{{#str}} save, local_grupomakro_core {{/str}}</a>
                </div>
                {{! End Actions }}
            </div>
        </div>
    </div>
</div>