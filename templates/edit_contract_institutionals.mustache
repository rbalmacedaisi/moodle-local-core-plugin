{{!
    @template local_grupomakro_core/edit_contract

    Template purpose and description.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * attributes Array of name / value pairs.

    Example context (json):
    {
        "attributes": [
            { "name": "src", "value": "https://example.com/imgs/logo.png" },
            { "name": "class", "value": "iconsmall" }
        ]
    }
}}
<div class="container">
    <div class="row">
        {{! Contract Action Panel }}
        <div class="col-sm-12 mb-2">
            <div class="d-flex align-items-center mt-3">
                <h5 class="text-secondary mb-0">{{#str}}cid,local_grupomakro_core{{/str}} - {{contract_id}}</h5>
                <div class="spacer"></div>
                <div class="btn-group" role="group" aria-label="Basic example">
                    {{{actionbuttons}}}
                </div>
            </div>
        </div>
        {{! End Contract Action Panel }}
        
        {{! Contract data to modify }}
        <div class="col-sm-12">
            <div class="card py-3 px-4">
                <form>
                    <div class="row pb-5 mt-2">
                        {{#contract}}
                        {{! Contract number field }}
                        <div class="col-sm-12 col-md-6 form-group">     
                            <label class="w-100" for="contractnumber">{{#str}} contractnumber, local_grupomakro_core {{/str}}</label>
                            <input type="text" class="form-control" id="contractnumber" required value="{{contractid}}">
                        </div>    
                        {{! End Contract number field }}    
                            
                        {{! contract start date field }}
                        <div class="col-sm-12 col-md-6 form-group">
                            <label class="w-100" for="startdate">{{#str}}startdate, local_grupomakro_core {{/str}}</label>
                            <input type="date" class="form-control" id="startdate" required value="{{formattedInitDate}}">
                        </div>
                        {{! End contract start date field }}
                        
                        {{! contract end date field }}
                        <div class="col-sm-12 col-md-6 form-group">
                            <label class="w-100" for="enddate">{{#str}} enddate, local_grupomakro_core {{/str}}</label>
                            <input type="date" class="form-control" id="enddate" required value="{{formattedExpectedEndDate}}">
                        </div>
                        {{! End contract end date field }}
                        
                        {{! contract budget field }}
                        <div class="col-sm-12 col-md-6 form-group">
                            <label class="w-100" for="budget">{{#str}} budget, local_grupomakro_core {{/str}}</label>
                            <div class="input-container">
                              <span class="prefix">$</span>
                              <input type="text" class="form-control input-field-prefix" id="budget"  required value="{{formattedBudget}}">
                            </div>
                        </div>
                        {{! End contract budget field }}
                        
                        {{! Contract billing condition field }}
                        <div class="col-sm-12 col-md-6 form-group">
                            <label class="w-100" for="billing_condition">{{#str}} billing_condition, local_grupomakro_core {{/str}}</label>
                            <div class="input-container">
                              <input type="text" class="form-control  input-field-suffix" id="billing_condition" required value="{{billingcondition}}">
                              <span class="suffix">%</span>
                            </div>
                        </div>
                        {{! End Contract billing condition field }}
                        {{/contract}}
                    </div>    
                </form>
            </div>
            
            {{! Actions }}
            <div class="d-flex card-footer bg-transparent px-0">
                <div class="spacer"></div>
                <a href="#" class="btn btn-secondary m-1" id="cancel-contract-update-button">{{#str}} cancel, local_grupomakro_core {{/str}}</a>
                <a href="#" class="btn btn-primary m-1" id="save-contract-button">{{#str}} save, local_grupomakro_core {{/str}}</a>
            </div>
            {{! End Actions }}
        </div>
        {{! End Contract data to modify }}
    </div>
</div>
{{> local_grupomakro_core/modals/class_error }}